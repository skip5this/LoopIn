{
  "manifest_version": 3,
  "name": "LoopIn",
  "description": "Tighten the loop between your browser and Claude Code",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "LoopIn"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3456/*",
    "http://127.0.0.1:3456/*",
    "http://192.168.*.*:3456/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-capture": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Toggle capture mode"
    }
  }
}
